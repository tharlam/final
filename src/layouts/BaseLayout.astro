---
// src/layouts/BaseLayout.astro
import Header from "../components/nav.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import "../styles/about-section.css";

interface Props {
    title: string;
}

const { title } = Astro.props;

// Define BASE_PATH from the environment variable (e.g., /final/)
const BASE_PATH = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>{title} | Tharlam Academy</title>

        <meta
            name="google-site-verification"
            content="googled8e2fda3b799e028"
        />

        <link






            href="https://unpkg.com/aos@2.3.4/dist/aos.css"






            rel="stylesheet"




        />
        <link rel="stylesheet" href={`${BASE_PATH}fa/css/all.min.css`} />
    </head>


    <body>
        <Header />

        <main>
            <div class="site-content-container">
                <slot />
            </div>
        </main>

        <Footer />

        <script>
            window.BASE_PATH = "${BASE_PATH}";
        </script>

        <script src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer></script>

        <script
            src={`${BASE_PATH}scripts/i18n-switcher.js`}
            defer
            type="module"



            ></script>

        <script src={`${BASE_PATH}scripts/reinit.js`} defer type="module"
        ></script>
    </body>
</html>

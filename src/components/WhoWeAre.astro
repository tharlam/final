<style>
    /* ============================================== */
    /* 1. BASE STYLES (Mobile First Defaults) */
    /* ============================================== */

    .container {
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        padding: 0 15px;
    }

    /* --- Primary Button --- */
    .btn-primary {
        background-color: #001f3f;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.3s ease;
        margin-top: 15px;
        display: inline-block;
        font-size: 15px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary:hover {
        background-color: black;
    }

    /* --- Who We Are Section Layout (Mobile Default: Stacked) --- */
    .who-we-are-section {
        padding: 40px 0;
        background-color: #fff;
    }

    .who-we-are-grid {
        display: flex;
        flex-direction: column;
        gap: 25px;
        align-items: flex-start;
    }

    /* --- Image Styling (Mobile) --- */
    .who-we-are-image {
        width: 100%;
        max-width: 100%;
        text-align: center;
        order: 1;
        margin-bottom: 10px;
    }

    .who-we-are-image .responsive-image {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        object-fit: cover;
    }

    /* --- Text Styling (Mobile) --- */
    .who-we-are-text {
        width: 100%;
        max-width: 100%;
        text-align: left;
        order: 2;
    }

    .section-sub-heading {
        color: #001f3f;
        font-size: 1em;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .section-tagline {
        font-size: 1.6em;
        color: #333;
        font-weight: 700;
        margin-top: 0;
        margin-bottom: 15px;
    }

    .who-we-are-text p {
        font-size: 15px;
        line-height: 1.6;
        color: #555;
        margin-bottom: 15px;
    }

    /* Content Headings inside the main text block */
    .who-we-are-text h3 {
        color: #001f3f;
        font-size: 1.2em;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    /* ============================================== */
    /* 2. TABLET/MEDIUM SCREENS (Min-width: 768px) */
    /* ============================================== */
    @media (min-width: 768px) {
        .container {
            padding: 0 20px;
        }
        .who-we-are-section {
            padding: 60px 0;
        }
        .section-tagline {
            font-size: 2em;
        }
        .who-we-are-grid {
            gap: 40px;
        }
    }

    /* ============================================== */
    /* 3. DESKTOP/LARGE SCREEN (Min-width: 992px) */
    /* ============================================== */
    @media (min-width: 992px) {
        .container {
            max-width: 1200px;
        }
        .who-we-are-section {
            padding: 80px 0;
        }

        .who-we-are-grid {
            flex-direction: row;
            gap: 60px;
            align-items: center;
            justify-content: space-between;
        }

        .who-we-are-text {
            flex: 1;
            max-width: 550px;
            order: 1;
        }

        .who-we-are-image {
            flex: 1;
            max-width: 500px;
            order: 2;
            margin-bottom: 0;
        }

        .section-sub-heading {
            font-size: 1.2em;
        }

        .section-tagline {
            font-size: 2.2em;
        }

        .who-we-are-text p {
            font-size: 16px;
        }
    }

    /* ============================================== */
    /* 4. MODAL & UTILITY STYLES */
    /* ============================================== */

    /* Utility class to stop background scroll */
    .no-scroll {
        overflow: hidden !important;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow-y: scroll;
        background-color: rgba(0, 0, 0, 0.8);
        padding: 10px 0;
        animation-name: fadeIn;
        animation-duration: 0.3s;
    }

    .modal-content {
        background-color: #ffffff;
        margin: 20px auto;
        padding: 20px;
        border: none;
        width: 95%;
        max-width: 900px;
        border-radius: 8px;
        position: relative;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        animation-name: animatetop;
        animation-duration: 0.4s;
        line-height: 1.6;
    }

    .modal-content h2 {
        color: #001f3f;
        margin-top: 0;
        margin-bottom: 15px;
        font-size: 1.5em;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        text-align: center;
    }

    .close-button {
        color: #fff;
        background-color: #001f3f !important;
        border: none;
        width: 30px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        border-radius: 50%;
        font-size: 20px;
        font-weight: bold;
        position: absolute;
        top: -20px;
        right: -20px;
        cursor: pointer;
        z-index: 100;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition:
            background-color 0.3s ease,
            transform 0.2s ease;
        outline: none;
    }

    .close-button:hover,
    .close-button:focus {
        background-color: black !important;
        transform: rotate(90deg) scale(1.1);
        color: #fff;
    }

    .modal-content h4 {
        color: #2c3e50;
        margin-top: 25px;
        margin-bottom: 10px;
        font-size: 1.1em;
        padding-left: 10px;
        border-left: 4px solid #001f3f;
    }

    .modal-content p {
        color: #444;
        line-height: 1.6;
        margin-bottom: 10px;
        font-size: 0.95em;
    }

    .modal-content ul {
        list-style: disc;
        margin-left: 20px;
        margin-bottom: 15px;
        color: #444;
    }

    .modal-content ul li {
        font-size: 0.95em;
        margin-bottom: 5px;
    }

    /* Keyframe Animations */
    @keyframes animatetop {
        from {
            top: -300px;
            opacity: 0;
        }
        to {
            top: 0;
            opacity: 1;
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* AOS Styles */
    [data-aos] {
        opacity: 0;
        transition-property: opacity, transform;
        transition-duration: 1s;
    }

    [data-aos].aos-animate {
        opacity: 1;
        transform: translate(0, 0);
    }

    [data-aos="fade-right"] {
        transform: translateX(-100px);
    }
    [data-aos="fade-left"] {
        transform: translateX(100px);
    }
</style>


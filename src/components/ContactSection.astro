// src/components/Contact.astro
// Finalized Contact section based on the user's detailed HTML and CSS structure.
// This component includes contact details on the left and a form on the right.
---

<section id="contact" class="contact-section">
    <div class="contact-content-wrapper">
        <div class="contact-left-column">
            <h2
                class="contact-main-heading"
                data-aos="fade-right"
                data-i18n="contact_main_heading"
            >
                Reach Out to <span class="highlight-blue">Tharlam Academy</span>
            </h2>
            <p
                class="contact-description"
                data-aos="fade-right"
                data-aos-delay="100"
                data-i18n="contact_description"
            >
                We are here to answer your questions about admissions, programs,
                and general inquiries.
            </p>

            <div
                class="contact-details-row"
                data-aos="fade-right"
                data-aos-delay="200"
            >
                <div class="contact-detail-item">
                    <i class="fas fa-phone-alt contact-detail-icon"></i>
                    <p class="contact-detail-text">
                        <a
                            href="tel:7139535200"
                            data-i18n="contact_phone_number">7139535200</a
                        >
                    </p>
                </div>

                <div class="contact-detail-item">
                    <i class="fas fa-envelope contact-detail-icon"></i>
                    <p class="contact-detail-text">
                        <a
                            href="mailto:info@tharlamacademy.org"
                            data-i18n="contact_email_address"
                            >info@tharlamacademy.org</a
                        >
                    </p>
                </div>

                <div class="contact-detail-item">
                    <i class="fas fa-map-marker-alt contact-detail-icon"></i>
                    <p class="contact-detail-text" data-i18n="contact_address">
                        Nepal, Kathmandu, Boudha 6
                    </p>
                </div>

                <div class="contact-detail-item whatsapp-item">
                    <i class="fab fa-whatsapp contact-detail-icon"></i>
                    <p class="contact-detail-text">
                        <a
                            href="https://wa.me/1234567890"
                            target="_blank"
                            data-i18n="contact_whatsapp_message"
                            >Message us on WhatsApp</a
                        >
                    </p>
                </div>
            </div>
        </div>

        <div
            class="contact-form-column"
            data-aos="fade-left"
            data-aos-delay="100"
        >
            <form
                class="contact-form"
                action="https://formspree.io/f/mgvkpwbd"
                method="POST"
            >
                <div class="form-row">
                    <div class="form-group">
                        <label for="full_name" data-i18n="form_full_name_label"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            id="full_name"
                            name="full_name"
                            required
                            placeholder="Full Name"
                            data-i18n-placeholder="form_full_name_placeholder"
                        />
                    </div>
                    <div class="form-group">
                        <label
                            for="email_address"
                            data-i18n="form_email_address_label"
                            >Email Address</label
                        >
                        <input
                            type="email"
                            id="email_address"
                            name="email_address"
                            required
                            placeholder="Email Address"
                            data-i18n-placeholder="form_email_address_placeholder"
                        />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label
                            for="phone_number"
                            data-i18n="form_phone_number_label"
                            >Phone Number</label
                        >
                        <input
                            type="tel"
                            id="phone_number"
                            name="phone_number"
                            placeholder="Phone Number"
                            data-i18n-placeholder="form_phone_number_placeholder"
                        />
                    </div>
                    <div class="form-group">
                        <label
                            for="location"
                            data-i18n="form_your_location_label"
                            >Your Location</label
                        >
                        <input
                            type="text"
                            id="location"
                            name="location"
                            placeholder="Your Location"
                            data-i18n-placeholder="form_your_location_placeholder"
                        />
                    </div>
                </div>

                <div class="form-group">
                    <label
                        for="inquiry_type"
                        data-i18n="form_inquiry_type_label"
                        >Your Inquiry Type</label
                    >
                    <select id="inquiry_type" name="inquiry_type">
                        <option
                            value=""
                            selected
                            disabled
                            hidden
                            data-i18n="form_select_option"
                        >
                            Select
                        </option>
                        <option
                            value="admissions"
                            data-i18n="form_option_admissions"
                        >
                            Admissions
                        </option>
                        <option
                            value="academic"
                            data-i18n="form_option_academic_programs"
                        >
                            Academic Programs
                        </option>
                        <option
                            value="enrollment"
                            data-i18n="form_option_enrollment"
                        >
                            Enrollment
                        </option>
                        <option
                            value="support"
                            data-i18n="form_option_support_donations"
                        >
                            Support/Donations
                        </option>
                        <option
                            value="general"
                            data-i18n="form_option_general_inquiry"
                        >
                            General Inquiry
                        </option>
                        <option value="other" data-i18n="form_option_other"
                            >Other</option
                        >
                    </select>
                </div>

                <div class="form-group">
                    <label
                        for="your_message"
                        data-i18n="form_your_message_label">Your Message</label
                    >
                    <textarea
                        id="your_message"
                        name="your_message"
                        rows="6"
                        placeholder="Leave your message here"
                        data-i18n-placeholder="form_your_message_placeholder"
                    ></textarea>
                </div>

                <button
                    type="submit"
                    class="submit-btn"
                    data-i18n="form_submit_button"
                >
                    SUBMIT <i class="fas fa-arrow-right submit-arrow"></i>
                </button>
            </form>
        </div>
    </div>
</section>

<style>
    /* The following CSS is integrated directly from your provided styling, 
    ensuring the full two-column 1200px desktop look and complete mobile responsiveness.
*/
    .contact-section {
        padding: 40px 20px;
        background-color: #e0f2f7;
        color: #333;
        text-align: center;
        overflow: hidden;
    }

    .contact-content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }

    .contact-left-column {
        flex: 1;
        padding: 60px 40px;
        background-color: #e0f2f7;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        text-align: left;
    }

    .contact-main-heading {
        font-size: 3.2rem;
        font-weight: 800;
        color: #001f3f;
        line-height: 1.2;
        margin-bottom: 20px;
    }

    .contact-main-heading .highlight-blue {
        color: #001f3f;
    }

    .contact-description {
        font-size: 1.15rem;
        line-height: 1.7;
        color: #555;
        margin-bottom: 40px;
        max-width: 500px;
    }

    .contact-details-row {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 30px;
        width: 100%;
    }

    .contact-detail-item {
        display: flex;
        align-items: center;
    }

    .contact-detail-icon {
        font-size: 1.4rem;
        color: #001f3f;
        margin-right: 12px;
        flex-shrink: 0;
        width: 25px;
        text-align: center;
    }

    .contact-detail-text {
        font-size: 1rem;
        color: #555;
        margin: 0;
        line-height: 1.5;
    }

    .contact-detail-text a {
        color: #555;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .contact-detail-text a:hover {
        color: #001f3f;
    }

    /* --- Right Column: Contact Form --- */
    .contact-form-column {
        flex: 1;
        background-color: #001f3f; /* Dark blue background */
        padding: 60px 40px;
        color: #ffffff;
    }

    .contact-form .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .contact-form .form-group {
        flex: 1;
        margin-bottom: 0;
        text-align: left;
    }

    .contact-form label {
        color: #ffffff;
        font-size: 0.95rem;
        margin-bottom: 10px;
        display: block; /* Ensure label takes full width */
    }

    .contact-form input[type="text"],
    .contact-form input[type="email"],
    .contact-form input[type="tel"],
    .contact-form select,
    .contact-form textarea {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #334e68;
        border-radius: 8px;
        font-size: 1rem;
        color: #333;
        background-color: #ffffff;
        box-sizing: border-box;
        transition:
            border-color 0.3s ease,
            box-shadow 0.3s ease;
        margin-top: 5px; /* Added minor spacing below label */
    }

    .contact-form input::placeholder,
    .contact-form textarea::placeholder {
        color: #888;
        opacity: 1;
    }

    .contact-form select {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        color: #001f3f;
        background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23001f3f%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13.2-6.4H18.2c-5%200-9.3%201.8-13.2%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2013.2l128%20127.9c3.9%203.9%208.7%205.8%2013.5%205.8s9.6-1.9%2013.5-5.8L287%2095.4c3.9-3.9%205.8-8.7%205.8-13.5%200-5-1.8-9.3-5.8-13.2z%22%2F%3E%3C%2Fsvg%3E");
        background-repeat: no-repeat;
        background-position: right 15px center;
        background-size: 12px;
        padding-right: 35px;
    }

    .contact-form input:focus,
    .contact-form select:focus,
    .contact-form textarea:focus {
        border-color: white; /* Changed focus to white for visibility on dark background */
        box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.25);
        outline: none;
    }

    .contact-form textarea {
        resize: vertical;
        min-height: 120px;
    }

    .contact-form .submit-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 15px 30px;
        background-color: white; /* Changed button color to white for contrast */
        color: #001f3f; /* Dark text on white button */
        border: none;
        border-radius: 50px;
        cursor: pointer;
        font-size: 1.05rem;
        font-weight: 600;
        transition:
            background-color 0.3s ease,
            transform 0.2s ease,
            box-shadow 0.3s ease;
        box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
        margin-top: 25px;
        min-width: 150px;
    }

    .contact-form .submit-btn .submit-arrow {
        margin-left: 10px;
        font-size: 1rem;
    }

    .contact-form .submit-btn:hover {
        background-color: #f0f0f0;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(255, 255, 255, 0.4);
    }

    /* --- Responsive Adjustments --- */

    @media (max-width: 992px) {
        .contact-section {
            padding: 60px 0;
        }
        .contact-content-wrapper {
            flex-direction: column;
            border-radius: 0;
            box-shadow: none;
            padding: 0;
        }
        .contact-left-column {
            padding: 40px 25px;
            align-items: center;
            text-align: center;
        }
        .contact-details-row {
            gap: 15px;
            align-items: center; /* Center the detail row items when stacked */
        }
        .contact-detail-item {
            justify-content: center; /* Center icon and text */
        }
        .contact-form-column {
            padding: 40px 25px;
        }
        .contact-form .form-row {
            flex-direction: column;
            gap: 0;
            margin-bottom: 0;
        }
        .contact-form .form-group {
            margin-bottom: 20px;
        }
        .contact-form .submit-btn {
            width: 100%;
            max-width: 300px;
            margin-left: auto;
            margin-right: auto;
        }
        /* Adjusted text sizes for better fit on tablets */
        .contact-main-heading {
            font-size: 2.5rem;
        }
        .contact-description {
            max-width: 90%;
        }
    }

    @media (max-width: 768px) {
        .contact-section {
            padding: 50px 0;
        }
        .contact-left-column {
            padding: 30px 20px;
        }
        .contact-main-heading {
            font-size: 2.2rem;
        }
        .contact-details-row {
            gap: 12px;
        }
        .contact-detail-icon {
            font-size: 1.3rem;
            margin-right: 8px;
        }
        .contact-detail-text {
            font-size: 0.95rem;
        }
        .contact-form-column {
            padding: 30px 20px;
        }
        .contact-form .form-group {
            margin-bottom: 15px;
        }
        .contact-form input,
        .contact-form select,
        .contact-form textarea {
            padding: 9px 10px;
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .contact-section {
            padding: 10px 0;
        }
        .contact-left-column {
            padding: 25px 15px;
        }
        .contact-main-heading {
            font-size: 1.8rem;
        }
        .contact-description {
            font-size: 0.9rem;
        }
        .contact-details-row {
            gap: 10px;
        }
        .contact-detail-icon {
            font-size: 1.2rem;
            margin-right: 6px;
        }
        .contact-detail-text {
            font-size: 0.9rem;
        }
        .contact-form-column {
            padding: 25px 15px;
        }
        .contact-form .submit-btn {
            padding: 8px 20px;
            font-size: 0.9rem;
            max-width: 100%;
        }
    }
</style>

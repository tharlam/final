<style>
    /* --- General/Shared Styles --- */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .highlight-green {
        color: var(--color-primary-green, #28a745);
    }

    /* --- Section 2: Bank Details Styles - Final Layout (Full Width) --- */
    .bank-transfer-info-section {
        padding: 80px 0;
        background-color: #f7f9fb;
    }
    .bank-transfer-card {
        display: flex;
        max-width: 1200px; /* Matched to .container for full section width */
        width: 100%;
        margin: 0 auto;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid #e0e0e0;
    }

    /* --- LEFT SIDE: MENU BUTTONS (Minimal Width) --- */
    .bank-tab-buttons-wrap {
        flex: 0 0 auto;
        display: flex;
        flex-direction: column;
        background-color: var(--color-dark-blue, #001f3f);
        padding: 10px 0;
        min-width: 180px;
    }
    .bank-tab-button {
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.9);
        padding: 15px 20px;
        text-align: left;
        font-size: 1.05rem;
        cursor: pointer;
        transition:
            background-color 0.3s,
            color 0.3s;
        border-left: 4px solid transparent;
        display: flex;
        align-items: center;
        gap: 10px;
        white-space: nowrap;
    }
    .bank-tab-button:hover:not(.active) {
        background-color: #003366;
        color: white;
    }
    .bank-tab-button.active {
        background-color: #f7f9fb;
        color: var(--color-dark-blue, #001f3f);
        font-weight: 700;
        border-left: 4px solid var(--color-primary-green, #28a745);

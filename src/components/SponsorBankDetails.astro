        cursor: pointer;
        border-radius: 4px;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }
    .copy-button:hover {
        background-color: var(--color-primary-green, #28a745);
        color: white;
        border-color: var(--color-primary-green, #28a745);
    }
    .copy-message {
        position: absolute;
        right: 40px;
        top: 50%;
        transform: translateY(-50%);
        background-color: var(--color-primary-green, #28a745);
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.85rem;
        opacity: 0;
        pointer-events: none;
        transition:
            opacity 0.3s,
            right 0.3s;
        white-space: nowrap;
        z-index: 10;
    }
    .copy-message.show {
        opacity: 1;
        right: 35px;
    }

    /* --- Media Queries (Responsiveness) --- */
    @media (max-width: 992px) {
        .bank-transfer-card {
            flex-direction: column;
            max-width: 100%;
        }
        .bank-tab-buttons-wrap {
            flex-direction: row;
            flex: auto;
            padding: 0;
            min-width: auto;
        }
        .bank-tab-button {
            flex: 1;
            text-align: center;
            border-left: none;
            border-bottom: 4px solid transparent;
            font-size: 1rem;
            padding: 15px 10px;
            justify-content: center;
        }
        .bank-tab-button.active {
            border-left: none;
            border-bottom: 4px solid var(--color-primary-green, #28a745);
        }
        .bank-details-display {
            padding: 30px 20px;
        }
        .detail-item {
            flex-direction: column;
            align-items: flex-start;
            padding: 10px 0;
        }
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
<script>
    /**
     * Initializes tab switching and copy-to-clipboard functionality, 
     * designed to be safe for Astro View Transitions (soft navigation).
     */
    function initializeBankDetails() {
        // --- 1. Element Selection (MUST be inside this function) ---
        const tabButtons = document.querySelectorAll('.bank-tab-button');
        const contentAreas = document.querySelectorAll('.bank-details-content');
        const copyButtons = document.querySelectorAll('.copy-button');

        // Safety check
        if (tabButtons.length === 0) {
            return;
        }

        // --- 2. Tab Switching Logic ---
        const switchTab = (bankType) => {
            tabButtons.forEach(btn => btn.classList.remove('active'));
            contentAreas.forEach(content => content.classList.remove('active'));

            const activeBtn = document.querySelector(`.bank-tab-button[data-bank="${bankType}"]`);
            const activeContent = document.getElementById(`${bankType}-bank-details`);

            if (activeBtn) activeBtn.classList.add('active');
            if (activeContent) activeContent.classList.add('active');
        };

        // Tab Button Handler (used for adding/removing listeners)
        const tabButtonListener = (event) => {
            const bankType = event.currentTarget.dataset.bank;
            switchTab(bankType);
        };

        // --- 3. Copy-to-Clipboard Logic ---
        // Copy Button Handler (used for adding/removing listeners)
        const copyButtonListener = async (event) => {
            const copyGroup = event.currentTarget.closest('.copy-group');
            const copyTarget = copyGroup.querySelector('.copy-target');
            const copyMessage = copyGroup.querySelector('.copy-message');
            
            if (copyTarget && navigator.clipboard) {
                try {
                    const textToCopy = copyTarget.textContent.trim();
                    await navigator.clipboard.writeText(textToCopy);
                    
                    // Show the 'Copied!' message
                    copyMessage.classList.add('show');

                    setTimeout(() => {
                        copyMessage.classList.remove('show');
                    }, 1500);

                } catch (err) {
                    console.error('Could not copy text: ', err);
                }
            } else {
                console.warn('Clipboard API not supported or copy target not found.');
            }
        };


        // --- 4. Listener Management (The Astro View Transition Fix) ---

        // A. Tab Listeners
        tabButtons.forEach(button => {
            // CRITICAL: Remove previous listeners before adding new ones
            button.removeEventListener('click', tabButtonListener); 
            button.addEventListener('click', tabButtonListener);
        });

        // B. Copy Button Listeners
        copyButtons.forEach(button => {
            // CRITICAL: Remove previous listeners before adding new ones
            button.removeEventListener('click', copyButtonListener); 
            button.addEventListener('click', copyButtonListener);
        });

        // C. Initialize the default tab
        switchTab('nepal');
    }

    // --- EXECUTION TRIGGERS ---

    // 1. Initial Load (Hard navigation/Browser refresh)
    document.addEventListener('DOMContentLoaded', initializeBankDetails);

    // 2. Astro View Transition (Soft navigation) - THE FIX
    document.addEventListener('astro:page-load', initializeBankDetails);
</script>